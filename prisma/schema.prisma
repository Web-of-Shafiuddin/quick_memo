generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String          @id @default(cuid())
  name          String?
  email         String          @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  authenticators Authenticator[]
  role          String          @default("user")
  isActive  Boolean  @default(true)
  lastLoginAt DateTime?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  profile   ShopProfile?
}

model ShopProfile {
  id            String   @id @default(cuid())
  userId        String?  @unique
  user          User?    @relation(fields: [userId], references: [id], onDelete: Cascade)
  shopName      String
  ownerName     String
  mobile        String   @unique
  address       String?
  logoUrl       String?
  theme         String   @default("default")
  customTheme    Json?    // Custom theme settings
  isPro         Boolean  @default(false)
  bkashNumber   String?
  proExpiry     DateTime?
  slogan        String?  // Shop slogan
  businessHours  String?  // Business hours
  productCount  Int      @default(0)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  memos         Memo[]
  savedProducts SavedProduct[]
  savedPresets  MemoPreset[]
  transactions  PaymentTransaction[]
  orders        Order[]
  customers     Customer[]
  serviceTickets ServiceTicket[]
  services      Service[]
  appointments  Appointment[]
}

model SavedProduct {
  id         String @id @default(cuid())
  profileId  String
  name       String
  price      Float
  category   String?
  imageUrl   String?
  stock      Int?
  supplier   String?
  costPrice  Float?
  profile    ShopProfile @relation(fields: [profileId], references: [id], onDelete: Cascade)
  createdAt  DateTime @default(now())
}

model MemoPreset {
  id          String @id @default(cuid())
  profileId   String
  name        String
  description String?
  products    Json   // Array of preset products
  settings    Json?  // Layout, colors, etc.
  isDefault    Boolean @default(false)
  profile     ShopProfile @relation(fields: [profileId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
}

model Memo {
  id            String   @id @default(cuid())
  profileId     String
  customerName  String
  customerMobile String
  customerAddress String?
  products      Json     // Store product list as JSON
  subtotal      Float
  deliveryCharge Float   @default(0)
  discount      Float    @default(0)
  totalAmount   Float
  paymentMethod String   @default("cod")
  status        String   @default("pending")
  theme         String?  // Theme used for this memo
  createdAt     DateTime @default(now())
  profile       ShopProfile @relation(fields: [profileId], references: [id], onDelete: Cascade)
}

model PaymentTransaction {
  id            String   @id @default(cuid())
  profileId     String
  transactionId String   @unique
  amount        Float
  paymentMethod String   @default("bkash")
  status        String   @default("pending") // pending, verified, rejected
  verifiedBy    String?  // Admin ID who verified
  verifiedAt    DateTime?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  profile       ShopProfile @relation(fields: [profileId], references: [id], onDelete: Cascade)
}

model Admin {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String   // In production, this should be hashed
  name      String
  role      String   @default("admin")
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Authenticator {
  id                   String  @id @default(cuid())
  credentialID         String  @unique
  userId               String
  providerAccountId    String
  credentialPublicKey  String
  counter              Int
  credentialDeviceType String
  credentialBackedUp   Boolean
  transports           String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Order {
  id              String   @id @default(cuid())
  profileId       String
  customerName    String
  customerMobile  String
  customerAddress String?
  products        Json     // Store product list as JSON
  totalAmount     Float
  status          String   @default("pending") // pending, processing, shipped, delivered, cancelled
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  profile         ShopProfile @relation(fields: [profileId], references: [id], onDelete: Cascade)
}

model Customer {
  id        String   @id @default(cuid())
  profileId String
  name      String
  mobile    String   @unique
  address   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  profile   ShopProfile @relation(fields: [profileId], references: [id], onDelete: Cascade)
  appointments Appointment[]
}

model ServiceTicket {
  id                String   @id @default(cuid())
  profileId         String
  customerName      String
  customerMobile    String
  serviceDetails    String
  estimatedCompletion DateTime?
  status            String   @default("pending") // pending, in_progress, waiting_for_parts, ready_for_pickup, completed
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  profile           ShopProfile @relation(fields: [profileId], references: [id], onDelete: Cascade)
}

model Service {
  id          String   @id @default(cuid())
  profileId   String
  name        String
  price       Float
  duration    Int // in minutes
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  profile     ShopProfile @relation(fields: [profileId], references: [id], onDelete: Cascade)
  appointments Appointment[]
}

model Appointment {
  id        String   @id @default(cuid())
  profileId String
  serviceId String
  customerId String
  startTime DateTime
  endTime   DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  profile   ShopProfile @relation(fields: [profileId], references: [id], onDelete: Cascade)
  service   Service  @relation(fields: [serviceId], references: [id], onDelete: Cascade)
  customer  Customer @relation(fields: [customerId], references: [id], onDelete: Cascade)
}
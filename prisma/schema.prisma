generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  password  String
  mobile    String?
  role      String   @default("user")
  isActive  Boolean  @default(true)
  lastLoginAt DateTime?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  profile   ShopProfile?
}

model ShopProfile {
  id            String   @id @default(cuid())
  userId        String?  @unique
  user          User?    @relation(fields: [userId], references: [id], onDelete: Cascade)
  shopName      String
  ownerName     String
  mobile        String   @unique
  address       String?
  logoUrl       String?
  theme         String   @default("default")
  customTheme    Json?    // Custom theme settings
  isPro         Boolean  @default(false)
  bkashNumber   String?
  proExpiry     DateTime?
  slogan        String?  // Shop slogan
  businessHours  String?  // Business hours
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  memos         Memo[]
  savedProducts SavedProduct[]
  savedPresets  MemoPreset[]
  transactions  PaymentTransaction[]
}

model SavedProduct {
  id         String @id @default(cuid())
  profileId  String
  name       String
  price      Float
  category   String?
  profile    ShopProfile @relation(fields: [profileId], references: [id], onDelete: Cascade)
  createdAt  DateTime @default(now())
}

model MemoPreset {
  id          String @id @default(cuid())
  profileId   String
  name        String
  description String?
  products    Json   // Array of preset products
  settings    Json?  // Layout, colors, etc.
  isDefault    Boolean @default(false)
  profile     ShopProfile @relation(fields: [profileId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
}

model Memo {
  id            String   @id @default(cuid())
  profileId     String
  customerName  String
  customerMobile String
  customerAddress String?
  products      Json     // Store product list as JSON
  subtotal      Float
  deliveryCharge Float   @default(0)
  discount      Float    @default(0)
  totalAmount   Float
  paymentMethod String   @default("cod")
  status        String   @default("pending")
  theme         String?  // Theme used for this memo
  createdAt     DateTime @default(now())
  profile       ShopProfile @relation(fields: [profileId], references: [id], onDelete: Cascade)
}

model PaymentTransaction {
  id            String   @id @default(cuid())
  profileId     String
  transactionId String   @unique
  amount        Float
  paymentMethod String   @default("bkash")
  status        String   @default("pending") // pending, verified, rejected
  verifiedBy    String?  // Admin ID who verified
  verifiedAt    DateTime?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  profile       ShopProfile @relation(fields: [profileId], references: [id], onDelete: Cascade)
}

model Admin {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String   // In production, this should be hashed
  name      String
  role      String   @default("admin")
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}